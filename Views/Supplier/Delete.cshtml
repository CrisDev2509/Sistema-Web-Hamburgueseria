@{
}
@model Bigtoria.ViewModels.SupplierViewModel;

<div class="content">
    <div class="message card">
        <p><b>PROVEEDOR - ELIMINAR</b></p>
    </div>
    <div class="filter card">
        <h2>ID: @Model.Id</h2>
        <a class="btn-close" asp-controller="Supplier" asp-action="Index"><i class="fa-regular fa-circle-xmark"></i></a>
    </div>
    <div class="delivery-content card">
        @if(TempData["Message"] != null)
        {
            <div>
                @(TempData["Message"])
            </div>    
        }

        <form class="row" method="post" asp-controller="Supplier" asp-action="Delete">
            <div class="col">
                <div>
                    <label for="name" class="label-form">Nombre</label>
                    <input class="input-form" type="text" name="Name" asp-for="Name" readonly />
                </div>
                <div>
                    <label for="RUC" class="label-form">Precio</label>
                    <input class="input-form" type="number" name="RUC" asp-for="RUC" readonly />
                </div>
                <div>
                    <label for="Email" class="label-form">Correo</label>
                    <input class="input-form" type="text" name="Email" asp-for="Email" readonly />
                </div>
                <button type="submit" class="btn-fill">ELIMINAR</button>
            </div>
        </form>
    </div>
</div>

